---
// Component Imports
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Navbar.astro';
import site from '../site.json'
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>Astro + TailwindCSS</title>
    <link rel="stylesheet" type="text/css" href={Astro.resolve("../styles/global.css")}>
  </head>

  <body>
    <Nav name="{site.title}" menus="{site.menus}" auth="{site.auth}"></Nav>
    <Hero header="{site.hero.header}" subheader="{site.hero.subheader}"></Hero>
    <Features features="{site.features}"></Features>
    <CTA CTA="{site.CTA}"></CTA>
    <Footer {site}></Footer>
  </body>
</html>
