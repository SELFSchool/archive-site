---
import Pill from './Pill.astro'
const {title="Posts", posts} = Astro.props
---

<h1 class="px-4 text-6xl font-bold text-primary">{title}</h1>
<div class="flex grid grid-cols-12 pb-10 sm:px-5 gap-x-8 gap-y-16">
    {posts.map((post) => (
        post.draft ? (
            <div class="hidden"></div>
        ): (
            <div class="flex flex-col items-start col-span-12 space-y-3 sm:col-span-6 xl:col-span-4 transition duration-300 transform hover:scale-105">
                <a href={`${post.url}`} class="block w-full">
                    <img class="object-cover w-full mb-2 overflow-hidden rounded-lg shadow-sm max-h-56" src={`${post.heroImage}`}>
                </a>
                <div class="flex flex-row gap-2">
                    {post.tags.map((item)=>(
                        <Pill>{item}</Pill>
                    ))}
                </div>
                <h2 class="text-lg font-bold sm:text-xl md:text-2xl"><a href={`${post.url}`}>{post.title}</a></h2>
                <p class="text-sm text-gray-500">{post.description}</p>
                <p class="pt-2 text-xs font-medium"><a href="#_" class="mr-1 underline">{post.author}</a> Â· <span class="mx-1">{post.publishDate}</span></p>
            </div>
        )
    ))}
</div>