---
import site from '../site.json'
import Nav from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  author: string;
  publishDate: string;
  heroImage: string;
  alt: string;
}

const {title, publishDate, author, heroImage} = Astro.props
---

<head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>Astro + TailwindCSS</title>
    <link rel="stylesheet" type="text/css" href={Astro.resolve("../styles/global.css")}>
</head>
<body>
    <Nav name="{site.title}" menus="{site.menus}" auth="{site.auth}" ></Nav>
    <section class="w-screen">
        <div class="flex flex-col max-w-7xl mx-auto justify-center items-center px-20">
            <img src="{heroImage}" class="w-full mb-16 rounded"/>
            <div class="w-full items-start mb-8">
                <h1 class="text-5xl mb-4 font-bold">{title}</h1>
                <p class="text-lg font-semibold">By {author}</p>
            </div>
            <div class="prose max-w-7xl">
                <slot />
            </div>
        </div>
    </section>
    <Footer {site}></Footer>
</body>