---
import { getMonthName } from '../utils'
const { post } = Astro.props
console.log(post.tags)
---
<div class="post-preview">
    <div class="sm:w-20 md:w-32">
        <div class="post-preview__date">
            <span class="post-preview__date__day">{ new Date(post.publishDate).getDate() }</span>
            <span class="post-preview__date__month-n-year">{ `${getMonthName(post.publishDate)} ${new Date(post.publishDate).getFullYear()}` }</span>
        </div>
    </div>
    <div class="flex-1">
        <h4 class="post-preview__title">
            <a href={post.url} title={post.title}>{post.title}</a>

        </h4>
        <div>
          <span class="pr-12">{post.author}</span>
          <ul class="inline-flex">
          {post.tags.map(tag => <li class="mr-2 rounded-full bg-red-400 text-red-50 px-3 text-xs font-bold">{tag}</li>)}
          </ul>   
        </div>     
        <p class="post-preview__desc">
            {post.description}
        </p>
    </div>
</div>
<style>
    .post-preview {
        @apply  flex gap-6
    }
    .post-preview__date {
        @apply flex flex-col w-full text-center
    }
    .post-preview__date__day {
        @apply text-6xl font-semibold text-gray-500
    }
    .post-preview__date__month-n-year {
        @apply text-gray-400
    }
    .post-preview__title {
        @apply text-2xl font-semibold text-primary hover:underline mb-2
    }
    .post-preview__desc {
        @apply text-lg leading-6 line-clamp-2
    }
</style>